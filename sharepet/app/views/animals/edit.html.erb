<div class="center">
  <h1>Updating pet</h1>

  <%= form_for(@animal) do |f| %>
    <% if @animal.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@animal.errors.count, "error") %> prohibited this animal from being saved:</h2>

        <ul>
        <% @animal.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
     <div class="input-field col s6">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="input-field col s6">
      <%= f.label "Specie" %>
      <%= f.text_field :animalType %>
    </div>

    <div class="input-field col s6">
      <%= f.label :breed %>
      <%= f.text_field :breed %>
    </div>

</div><div class="row">
      <div class="input-field col s5 ">
        <%= f.label :age %>
        <%= f.number_field :age %>
      </div> 


      <div class="file-field input-field col s5">
        <div class="btn">
          <span>File</span>
          <%= f.file_field :attachment, :accept=>"image/png,image/gif,image/jpeg"%>
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text" placeholder=<%= @animal.attachment %> >
        </div>
      </div>
      <!-- <%= f.file_field :attachment %> -->
    </div>


      <div class="switch col s2">
        <label>
          Available
          <%= f.check_box :adopted , :type=>"checkbox"%>
          <span class="lever"></span>
          Adopted
        </label>
      </div>
      <br><br>

    <div >
      <button class="btn waves-effect waves-light" type="submit" name="action" onclick="Materialize.toast('Successfully Submited!', 4000)">Submit
        <i class="material-icons right">send</i>
      </button>
    </div>
  <% end %>


  <br>
  <%= link_to 'Back', @animal ,:class=>"btn waves-effect waves-orange red"%>
</div>