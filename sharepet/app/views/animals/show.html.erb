<p id="notice"><%= notice %></p>


<div class="card">
  <div class="card-image waves-effect waves-block waves-light">
    <img class="activator" src="/assets/dog1.jpeg">
  </div>
  <div class="card-content">
    <span class="card-title activator grey-text text-darken-4"><%= @animal.name %><i class="material-icons right">more_vert</i></span>
    <p>
      <div class="card-action">
        <%= link_to 'Edit', edit_animal_path(@animal) %>
      </div>
    </p>
  </div>
  <div class="card-reveal">
    <span class="card-title grey-text text-darken-4"><%= @animal.name %><i class="material-icons right">close</i></span>
    <p>
      <b>Specie: </b>
      <%= @animal.animalType %>
    </p>
    <p>
      <b>Breed: </b>
      <%= @animal.breed %>
    </p>
    <p>
      <b>Age: </b>
      <%= @animal.age %>
    </p>
    <p>
      <b>Address: </b>
      <%= @animal.address %>
    </p>
<%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@animal.latitude}%2C#{@animal.longitude}" %>

  </div>
  </div>
</div>

<a href='/animals/' class="btn waves-effect waves-orange teal lighten-1">Back</a>


