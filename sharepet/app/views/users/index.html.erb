
<body>
    <div class="container">

        <div class="center">
            <h1>Listing users</h1>

            <table>
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Password</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone number</th>
                        <th>Zip code</th>
                        <th>Address</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>

                <% @users.each do |user| %>
                  <tr>
                    <td><%= user.username %></td>
                    <td><%= user.password %></td>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.phone_number %></td>
                    <td><%= user.zip_code %></td>
                    <td><%= user.address %></td>
                    <td><%= link_to 'Show', user %></td>
                    <td><%= link_to 'Edit', edit_user_path(user) %></td>
                    <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
                </table>

            <br />

            <%= link_to 'New User', new_user_path %>
        </div>
    </div>
</body>