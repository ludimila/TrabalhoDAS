<body>
  <div class="container">

    <p id="notice"><%= notice %></p>

    <% if @user.attachment? %>
      <%= image_tag(@user.attachment.url, {:class=>"activator"}) if @user.attachment? %>
    <% else %>
      <img src="/assets/dog1.jpeg" alt="" class="activator">
    <% end %>

    <p>
      <b>Username:</b>
      <%= @user.username %>
    </p>

    <p>
      <b>Password:</b>
      <%= @user.password %>
    </p>

    <p>
      <b>Name:</b>
      <%= @user.name %>
    </p>

    <p>
      <b>Email:</b>
      <%= @user.email %>
    </p>

    <p>
      <b>Phone number:</b>
      <%= @user.phone_number %>
    </p>

    <p>
      <b>Zip code:</b>
      <%= @user.zip_code %>
    </p>

    <p>
      <b>Address:</b>
      <%= @user.address %>
    </p>

    <div ><a href='/user/edit' class="btn waves-effect waves-orange red">edit</a></div>
    <%= link_to 'Edit', edit_user_path(@user) %> |
    <%= link_to 'Back', users_path %>
  </div>
</body>
