  gem 'shoulda-matchers'
  gem 'cucumber-rails', :require => false
  gem 'cucumber-rails-training-wheels'
  gem 'database_cleaner'
  gem 'capybara'
  gem 'launchy'
  gem 'simplecov'
  gem 'ruby-prof'
end


group :development, :test do
  gem "smart_listing"
  gem 'has_scope'
  gem 'rspec-rails'
  gem 'factory_girl'
  gem 'factory_girl_rails'
  gem 'fuubar'
end

